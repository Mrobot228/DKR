# ========================================
# Telegram Bot Token (отримати через @BotFather)
# ========================================
BOT_TOKEN=your_telegram_bot_token_here

# ========================================
# Database Configuration
# ========================================
# Тип бази даних: sqlite (за замовчуванням) або postgres
DB_TYPE=sqlite

# Для SQLite - шлях до файлу бази даних
DB_PATH=./post_office_bot.db

# Для PostgreSQL (якщо DB_TYPE=postgres)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=your_password_here
# DB_NAME=post_office_bot

# ========================================
# Google Maps API Key (опціонально)
# Якщо не вказано - використовується OpenStreetMap
# ========================================
GOOGLE_MAPS_API_KEY=

# ========================================
# Admin Telegram IDs (через кому)
# Дізнатися свій ID: напишіть @userinfobot в Telegram
# ========================================
ADMIN_IDS=123456789

# ========================================
# Server Configuration
# ========================================
PORT=3000
NODE_ENV=development
